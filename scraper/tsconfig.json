{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": false,
    "types": ["mocha", "node"]
  },
  "include": [
    "./src/*.ts",
    "./src/*.d.ts",
    "./test/*.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./test/**/*.ts",
  ],
  "ts-node": {
    "moduleTypes": {
      "*.ts": "cjs"
    }
  },
  "exclude": ["node_modules/", "dist/"]
}
